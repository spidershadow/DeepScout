modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Streamlit App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Check Streamlit"

[[workflows.workflow]]
name = "Run Streamlit App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run main.py --server.port 8501"
waitForPort = 8501

[[workflows.workflow]]
name = "Check Streamlit"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip show streamlit && echo '---' && streamlit hello --server.headless true --server.port 5000"

[deployment]
run = ["sh", "-c", "streamlit run main.py --server.port 8501"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8501
externalPort = 3000
